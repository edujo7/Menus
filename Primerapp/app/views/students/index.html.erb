<p id="notice"><%= notice %></p>

<div class="container">
<h1>LISTA DE ESTUDIANTES</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Idestudiante</th>
      <th>Name</th>
      <th>Dir</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @students.each do |student| %>
      <tr>
        <td><%= student.idestudiante %></td>
        <td><%= student.name %></td>
        <td><%= student.dir %></td>
        <td><%= student.birthday %></td>
        <td><%= link_to 'Mostrar', student,:class=>"btn btn-mini btn-info" %></td>
        <td><%= link_to 'Modificar', edit_student_path(student),:class=>"btn btn-mini btn-warning" %></td>
        <td><%= link_to 'Eliminar', student, :method => :delete, data: { confirm: 'Estas Seguro?', },:class=>"btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo Estudiante', new_student_path, :class => 'btn btn-success' %>
